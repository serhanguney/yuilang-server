{
    "version": "2.0.2",
    "compilerOptions": {
      "outDir": "./build",
      "lib": [
        "es5",
        "es6",
        "dom",
        "es2015.core",
        "es2015.collection",
        "es2015.generator",
        "es2015.iterable",
        "es2015.promise",
        "es2015.proxy",
        "es2015.reflect",
        "es2015.symbol",
        "es2015.symbol.wellknown",
        "esnext.asynciterable"
      ],
      "module": "commonjs",
      "target": "es2017",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "strictNullChecks": false,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true
    },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src/**/*"]
}
